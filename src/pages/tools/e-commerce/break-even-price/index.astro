---
// File: src/pages/tools/e-commerce/break-even-price/index.astro
import BaseLayout from "../../../../components/layout/BaseLayout.astro";

const pageTitle = "Break-even Price Calculator — Free & Instant | SimpleTools";
const pageDescription =
  "Find the minimum selling price that covers all costs and fees (COGS, platform fee, payment fee, shipping, and ads). No login. Instant results.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="st_calcPage">
    <section class="st_calcHero container">
      <div class="st_calcHeroTop">
        <div class="st_kicker">Free • No login • Instant</div>
        <h1 class="st_h1">Break-even Price Calculator</h1>
        <p class="st_lead">
          Calculate the minimum selling price that covers all variable costs and
          percent-based fees—so you don’t accidentally sell at a loss.
        </p>
      </div>
    </section>

    <!-- Calculator -->
    <section class="container st_calcWrap" aria-label="Break-even calculator">
      <div class="st_calcGrid">
        <!-- LEFT: Inputs (1 column stacked) -->
        <div class="st_card st_inputs">
          <div class="st_cardHead">
            <h2 class="st_h2">Inputs</h2>
            <p class="st_muted">Enter your per-order costs and fee rates.</p>
          </div>

          <div class="st_field">
            <label class="st_label" for="be_price">Target selling price (optional)</label>
            <div class="st_inputRow">
              <span class="st_prefix">$</span>
              <input id="be_price" class="st_input" inputmode="decimal" type="number" min="0" step="0.01" placeholder="0.00" />
            </div>
            <div class="st_hint">Optional. If entered, we also show estimated profit at that price.</div>
          </div>

          <div class="st_field">
            <label class="st_label" for="be_cogs">Product cost (COGS)</label>
            <div class="st_inputRow">
              <span class="st_prefix">$</span>
              <input id="be_cogs" class="st_input" inputmode="decimal" type="number" min="0" step="0.01" placeholder="0.00" />
            </div>
          </div>

          <div class="st_field">
            <label class="st_label" for="be_platformFee">Platform fee (%)</label>
            <div class="st_inputRow">
              <input id="be_platformFee" class="st_input" inputmode="decimal" type="number" min="0" step="0.01" placeholder="0.00" />
              <span class="st_suffix">%</span>
            </div>
            <div class="st_hint">Example: Amazon referral fee, marketplace fee, etc.</div>
          </div>

          <div class="st_field">
            <label class="st_label" for="be_paymentFee">Payment fee (%)</label>
            <div class="st_inputRow">
              <input id="be_paymentFee" class="st_input" inputmode="decimal" type="number" min="0" step="0.01" placeholder="0.00" />
              <span class="st_suffix">%</span>
            </div>
            <div class="st_hint">Example: card processing fee on Shopify.</div>
          </div>

          <div class="st_field">
            <label class="st_label" for="be_shipping">Shipping cost</label>
            <div class="st_inputRow">
              <span class="st_prefix">$</span>
              <input id="be_shipping" class="st_input" inputmode="decimal" type="number" min="0" step="0.01" placeholder="0.00" />
            </div>
          </div>

          <div class="st_field">
            <label class="st_label" for="be_ads">Ad cost per order</label>
            <div class="st_inputRow">
              <span class="st_prefix">$</span>
              <input id="be_ads" class="st_input" inputmode="decimal" type="number" min="0" step="0.01" placeholder="0.00" />
            </div>
          </div>

          <div class="st_divider"></div>

          <div class="st_actions">
            <button class="st_btn" type="button" id="be_reset">Reset</button>
            <div class="st_note">Tip: leave “Target selling price” empty if you only need break-even.</div>
          </div>
        </div>

        <!-- RIGHT: Results -->
        <aside class="st_card st_results" aria-label="Results">
          <div class="st_cardHead">
            <h2 class="st_h2">Results</h2>
            <p class="st_muted">Instant output with a clear breakdown.</p>
          </div>

          <div class="st_resultMain">
            <div class="st_resultLabel">Break-even price</div>
            <div class="st_resultValue" id="be_breakEven">$0.00</div>
            <div class="st_badgeRow">
              <span class="st_badge" id="be_rateBadge">Fees rate: 0.00%</span>
              <span class="st_badge" id="be_denomBadge">Revenue kept: 100.00%</span>
            </div>
            <div class="st_warn" id="be_warn" hidden>
              Your total percent fees are <strong>100%</strong> or higher. Break-even price can’t be calculated.
            </div>
          </div>

          <div class="st_pills">
            <div class="st_pill">
              <div class="st_pillKey">Fixed costs</div>
              <div class="st_pillVal" id="be_fixed">$0.00</div>
              <div class="st_pillSub">COGS + shipping + ads</div>
            </div>

            <div class="st_pill">
              <div class="st_pillKey">Estimated profit (at target price)</div>
              <div class="st_pillVal" id="be_profit">$0.00</div>
              <div class="st_pillSub">Shown only if target price is entered</div>
            </div>

            <div class="st_pill">
              <div class="st_pillKey">Net margin (at target price)</div>
              <div class="st_pillVal" id="be_margin">0%</div>
              <div class="st_pillSub">Net profit ÷ price</div>
            </div>
          </div>
        </aside>
      </div>
    </section>

    <!-- Content (AdSense/SEO) -->
    <section class="container st_content">
      <div class="st_contentInner">
        <h2 class="st_h3">How it works</h2>
        <p class="st_p">
          Break-even price is the minimum selling price that makes your net profit exactly $0 after subtracting
          fixed costs (COGS, shipping, ads) and percent-based fees (platform + payment). If your actual price is
          lower than break-even, you are losing money per order.
        </p>

        <h2 class="st_h3">Formula</h2>
        <div class="st_formula">
          <div class="st_formulaLine">
            <span class="st_mono">Fixed costs</span> = <span class="st_mono">COGS + Shipping + Ads</span>
          </div>
          <div class="st_formulaLine">
            <span class="st_mono">Fee rate</span> = <span class="st_mono">(Platform % + Payment %) / 100</span>
          </div>
          <div class="st_formulaLine">
            <span class="st_mono">Break-even price</span> =
            <span class="st_mono">Fixed costs / (1 − Fee rate)</span>
          </div>
          <div class="st_formulaLine">
            <span class="st_mono">Net profit (at price P)</span> =
            <span class="st_mono">P − Fixed costs − (Fee rate × P)</span>
          </div>
        </div>

        <h2 class="st_h3">Example</h2>
        <p class="st_p">
          Suppose COGS is $15, shipping is $5, ads are $10, platform fee is 15%, and payment fee is 2.9%.
          Fixed costs = $30, fee rate = 17.9%. Break-even price = $30 ÷ (1 − 0.179) = <strong>$36.54</strong>.
          Selling at $36.54 yields about $0 net profit; any lower means a loss.
        </p>

        <h2 class="st_h3">FAQ</h2>
        <div class="st_faq">
          <details class="st_faqItem">
            <summary>Does this include taxes?</summary>
            <p>Not in this version. Taxes vary by state and business setup, so they are excluded to keep the calculator simple.</p>
          </details>

          <details class="st_faqItem">
            <summary>Which platforms can I use this for?</summary>
            <p>Any platform with percent-based fees, such as Amazon, Shopify, Etsy, Walmart Marketplace, and more.</p>
          </details>

          <details class="st_faqItem">
            <summary>What if my fees are very high?</summary>
            <p>If platform + payment fees reach 100% or more, break-even cannot be computed because you keep none of the revenue.</p>
          </details>

          <details class="st_faqItem">
            <summary>Why is break-even higher than I expected?</summary>
            <p>Percent fees scale with price. Combined with ads and shipping, they can push break-even up quickly.</p>
          </details>

          <details class="st_faqItem">
            <summary>Can I test a target selling price?</summary>
            <p>Yes—enter a target price to see estimated net profit and net margin at that price.</p>
          </details>

          <details class="st_faqItem">
            <summary>Is this calculator free?</summary>
            <p>Yes. No login, no account, and no payment required.</p>
          </details>
        </div>

        <a class="st_backLink" href="/tools/e-commerce/">← Back to E-commerce Tools</a>
      </div>
    </section>
  </main>

  <script>
    const $ = (id) => document.getElementById(id);

    const el = {
      price: $("be_price"),
      cogs: $("be_cogs"),
      platform: $("be_platformFee"),
      payment: $("be_paymentFee"),
      shipping: $("be_shipping"),
      ads: $("be_ads"),

      outBreakEven: $("be_breakEven"),
      outFixed: $("be_fixed"),
      outProfit: $("be_profit"),
      outMargin: $("be_margin"),
      rateBadge: $("be_rateBadge"),
      denomBadge: $("be_denomBadge"),
      warn: $("be_warn"),

      reset: $("be_reset"),
    };

    const toNum = (v) => {
      const n = Number(v);
      return Number.isFinite(n) ? n : 0;
    };

    const money = (n) =>
      new Intl.NumberFormat("en-US", {
        style: "currency",
        currency: "USD",
        maximumFractionDigits: 2,
      }).format(Number.isFinite(n) ? n : 0);

    const pct = (n) =>
      `${(Number.isFinite(n) ? n : 0).toFixed(2)}%`;

    function calc() {
      const price = toNum(el.price.value);
      const cogs = toNum(el.cogs.value);
      const platformFee = toNum(el.platform.value) / 100;
      const paymentFee = toNum(el.payment.value) / 100;
      const shipping = toNum(el.shipping.value);
      const ads = toNum(el.ads.value);

      const feeRate = Math.max(0, platformFee + paymentFee);
      const fixed = Math.max(0, cogs + shipping + ads);
      const denom = 1 - feeRate;

      el.rateBadge.textContent = `Fees rate: ${pct(feeRate * 100)}`;
      el.denomBadge.textContent = `Revenue kept: ${pct(Math.max(0, denom) * 100)}`;

      if (denom <= 0) {
        el.warn.hidden = false;
        el.outBreakEven.textContent = "$—";
      } else {
        el.warn.hidden = true;
        const breakEven = fixed / denom;
        el.outBreakEven.textContent = money(breakEven);
      }

      el.outFixed.textContent = money(fixed);

      // Optional profit & margin at target price
      if (price > 0 && denom > 0) {
        const netProfit = price - fixed - feeRate * price;
        const netMargin = (netProfit / price) * 100;

        el.outProfit.textContent = money(netProfit);
        el.outMargin.textContent = `${(Number.isFinite(netMargin) ? netMargin : 0).toFixed(1)}%`;
      } else {
        el.outProfit.textContent = money(0);
        el.outMargin.textContent = "0%";
      }
    }

    ["input", "change"].forEach((evt) => {
      el.price.addEventListener(evt, calc);
      el.cogs.addEventListener(evt, calc);
      el.platform.addEventListener(evt, calc);
      el.payment.addEventListener(evt, calc);
      el.shipping.addEventListener(evt, calc);
      el.ads.addEventListener(evt, calc);
    });

    el.reset.addEventListener("click", () => {
      el.price.value = "";
      el.cogs.value = "";
      el.platform.value = "";
      el.payment.value = "";
      el.shipping.value = "";
      el.ads.value = "";
      calc();
    });

    calc();
  </script>

  <style>
    /* Page shell */
    .st_calcPage { padding: 18px 0 34px; }
    .container { width: 100%; max-width: 1120px; margin: 0 auto; padding: 0 16px; }

    .st_calcHero { padding-top: 8px; padding-bottom: 10px; }
    .st_calcHeroTop { max-width: 820px; }
    .st_kicker {
      display: inline-flex;
      gap: 8px;
      align-items: center;
      font-size: 12px;
      font-weight: 800;
      color: var(--muted, rgba(2,6,23,.65));
      border: 1px solid rgba(2,6,23,.10);
      background: rgba(255,255,255,.7);
      padding: 7px 10px;
      border-radius: 999px;
    }
    .st_h1 {
      margin: 12px 0 8px;
      font-size: clamp(26px, 3vw, 34px);
      line-height: 1.15;
      letter-spacing: -0.03em;
    }
    .st_lead {
      margin: 0;
      font-size: 14px;
      line-height: 1.6;
      color: var(--muted, rgba(2,6,23,.70));
      max-width: 64ch;
    }

    /* Grid */
    .st_calcWrap { margin-top: 14px; }
    .st_calcGrid {
      display: grid;
      grid-template-columns: 1.3fr 1fr;
      gap: 14px;
      align-items: start;
    }
    @media (max-width: 860px) {
      .st_calcGrid { grid-template-columns: 1fr; }
    }

    /* Card */
    .st_card{
      background: #fff;
      border: 1px solid rgba(2,6,23,.10);
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(2,6,23,.06);
      overflow: hidden;
    }
    .st_cardHead{
      padding: 16px 16px 10px;
      border-bottom: 1px solid rgba(2,6,23,.06);
    }
    .st_h2{
      margin: 0;
      font-size: 14px;
      letter-spacing: -0.02em;
    }
    .st_muted{
      margin: 6px 0 0;
      font-size: 12px;
      color: var(--muted, rgba(2,6,23,.65));
      line-height: 1.55;
    }

    /* Inputs */
    .st_inputs { padding-bottom: 14px; }
    .st_field { padding: 12px 16px 0; }
    .st_label{
      display:block;
      font-size: 12px;
      font-weight: 800;
      letter-spacing: -0.01em;
      margin-bottom: 8px;
    }
    .st_inputRow{
      display:flex;
      align-items:center;
      border: 1px solid rgba(2,6,23,.10);
      background: rgba(255,255,255,.9);
      border-radius: 12px;
      overflow: hidden;
    }
    .st_prefix, .st_suffix{
      font-size: 12px;
      font-weight: 800;
      padding: 10px 10px;
      color: rgba(2,6,23,.65);
      background: rgba(2,6,23,.03);
      border-right: 1px solid rgba(2,6,23,.08);
    }
    .st_suffix{
      border-right: 0;
      border-left: 1px solid rgba(2,6,23,.08);
    }
    .st_input{
      width: 100%;
      border: 0;
      outline: none;
      padding: 10px 12px;
      font-size: 14px;
      font-weight: 800;
      background: transparent;
      color: rgba(2,6,23,.92);
    }
    .st_input::placeholder{ color: rgba(2,6,23,.35); font-weight: 700; }
    .st_hint{
      margin-top: 7px;
      font-size: 12px;
      color: var(--muted, rgba(2,6,23,.60));
      line-height: 1.5;
    }
    .st_divider{ margin: 14px 16px 0; height:1px; background: rgba(2,6,23,.06); }
    .st_actions{
      padding: 12px 16px 0;
      display:flex; justify-content: space-between; align-items:center; gap: 12px; flex-wrap: wrap;
    }
    .st_btn{
      appearance: none;
      border: 1px solid rgba(2,6,23,.10);
      background: rgba(255,255,255,.92);
      padding: 10px 12px;
      border-radius: 12px;
      font-size: 12px;
      font-weight: 900;
      cursor: pointer;
    }
    .st_btn:hover{ transform: translateY(-1px); }
    .st_note{ font-size: 12px; color: var(--muted, rgba(2,6,23,.60)); }

    /* Results */
    .st_results { position: sticky; top: 14px; }
    @media (max-width: 860px) { .st_results { position: static; } }

    .st_resultMain{ padding: 14px 16px 8px; }
    .st_resultLabel{
      font-size: 12px;
      font-weight: 900;
      color: rgba(2,6,23,.65);
    }
    .st_resultValue{
      margin-top: 6px;
      font-size: 34px;
      font-weight: 950;
      letter-spacing: -0.04em;
      line-height: 1.05;
    }
    .st_badgeRow{
      margin-top: 10px;
      display:flex; gap: 8px; flex-wrap: wrap;
    }
    .st_badge{
      font-size: 12px;
      font-weight: 900;
      padding: 7px 10px;
      border-radius: 999px;
      border: 1px solid rgba(2,6,23,.10);
      background: rgba(2,6,23,.03);
      color: rgba(2,6,23,.75);
    }
    .st_warn{
      margin-top: 10px;
      padding: 10px 12px;
      border-radius: 12px;
      border: 1px solid rgba(220,38,38,.25);
      background: rgba(220,38,38,.06);
      color: rgba(127,29,29,.95);
      font-size: 12px;
      line-height: 1.5;
    }

    .st_pills{
      padding: 10px 16px 16px;
      display: grid;
      grid-template-columns: 1fr;
      gap: 10px;
    }
    .st_pill{
      border-radius: 14px;
      border: 1px solid rgba(2,6,23,.08);
      background: rgba(2,6,23,.02);
      padding: 12px 12px;
    }
    .st_pillKey{ font-size: 12px; font-weight: 900; color: rgba(2,6,23,.65); }
    .st_pillVal{ margin-top: 6px; font-size: 20px; font-weight: 950; letter-spacing: -0.03em; }
    .st_pillSub{ margin-top: 6px; font-size: 12px; color: var(--muted, rgba(2,6,23,.60)); }

    /* Content sections */
    .st_content{ margin-top: 18px; }
    .st_contentInner{
      max-width: 980px;
      margin: 0 auto;
      padding: 16px 0 0;
    }
    .st_h3{
      margin: 18px 0 8px;
      font-size: 14px;
      font-weight: 950;
      letter-spacing: -0.02em;
    }
    .st_p{
      margin: 0;
      font-size: 13px;
      line-height: 1.75;
      color: rgba(2,6,23,.78);
    }
    .st_formula{
      margin-top: 10px;
      padding: 12px 12px;
      border-radius: 14px;
      border: 1px solid rgba(2,6,23,.08);
      background: rgba(2,6,23,.02);
    }
    .st_formulaLine{
      font-size: 12.5px;
      line-height: 1.7;
      color: rgba(2,6,23,.80);
    }
    .st_mono{ font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; font-weight: 800; }

    .st_faq{ margin-top: 8px; display: grid; gap: 10px; }
    .st_faqItem{
      border: 1px solid rgba(2,6,23,.08);
      background: rgba(255,255,255,.9);
      border-radius: 14px;
      padding: 10px 12px;
    }
    .st_faqItem summary{
      cursor: pointer;
      font-size: 13px;
      font-weight: 900;
      list-style: none;
    }
    .st_faqItem summary::-webkit-details-marker { display: none; }
    .st_faqItem p{
      margin: 8px 0 0;
      font-size: 13px;
      line-height: 1.7;
      color: rgba(2,6,23,.75);
    }

    .st_backLink{
      display: inline-block;
      margin-top: 16px;
      font-size: 13px;
      font-weight: 900;
      padding: 10px 12px;
      border-radius: 12px;
      border: 1px solid rgba(2,6,23,.10);
      background: rgba(255,255,255,.9);
      text-decoration: none;
      color: rgba(2,6,23,.92);
    }
  </style>
</BaseLayout>
