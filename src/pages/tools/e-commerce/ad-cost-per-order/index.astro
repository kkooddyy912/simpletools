---
// File: src/pages/tools/e-commerce/ad-cost-per-order/index.astro
import BaseLayout from "../../../../components/layout/BaseLayout.astro";

const pageTitle = "Ad Cost per Order Calculator — Free & Instant | SimpleTools";
const pageDescription =
  "Calculate the maximum ad spend per order you can afford while still hitting your target net margin. Includes COGS, platform fee, payment fee, and shipping. No login. Instant results.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="st_calcPage">
    <section class="st_calcHero container">
      <div class="st_calcHeroTop">
        <div class="st_kicker">Free • No login • Instant</div>
        <h1 class="st_h1">Ad Cost per Order Calculator</h1>
        <p class="st_lead">
          Calculate the maximum ad spend you can afford per order while still
          hitting your target net margin—before you scale campaigns.
        </p>
      </div>
    </section>

    <!-- Calculator -->
    <section class="container st_calcWrap" aria-label="Ad cost per order calculator">
      <div class="st_calcGrid">
        <!-- LEFT: Inputs (1 column stacked) -->
        <div class="st_card st_inputs">
          <div class="st_cardHead">
            <h2 class="st_h2">Inputs</h2>
            <p class="st_muted">Enter your price, costs, fees, and target margin.</p>
          </div>

          <div class="st_field">
            <label class="st_label" for="acpo_price">Selling price (USD)</label>
            <div class="st_inputRow">
              <span class="st_prefix">$</span>
              <input
                id="acpo_price"
                class="st_input"
                inputmode="decimal"
                type="number"
                min="0"
                step="0.01"
                placeholder="0.00"
              />
            </div>
          </div>

          <div class="st_field">
            <label class="st_label" for="acpo_targetMargin">Target net margin (%)</label>
            <div class="st_inputRow">
              <input
                id="acpo_targetMargin"
                class="st_input"
                inputmode="decimal"
                type="number"
                min="0"
                step="0.01"
                placeholder="0.00"
              />
              <span class="st_suffix">%</span>
            </div>
            <div class="st_hint">Net margin after COGS, fees, shipping, and ads.</div>
          </div>

          <div class="st_field">
            <label class="st_label" for="acpo_cogs">Product cost (COGS)</label>
            <div class="st_inputRow">
              <span class="st_prefix">$</span>
              <input
                id="acpo_cogs"
                class="st_input"
                inputmode="decimal"
                type="number"
                min="0"
                step="0.01"
                placeholder="0.00"
              />
            </div>
          </div>

          <div class="st_field">
            <label class="st_label" for="acpo_platformFee">Platform fee (%)</label>
            <div class="st_inputRow">
              <input
                id="acpo_platformFee"
                class="st_input"
                inputmode="decimal"
                type="number"
                min="0"
                step="0.01"
                placeholder="0.00"
              />
              <span class="st_suffix">%</span>
            </div>
            <div class="st_hint">Example: marketplace / referral fee.</div>
          </div>

          <div class="st_field">
            <label class="st_label" for="acpo_paymentFee">Payment fee (%)</label>
            <div class="st_inputRow">
              <input
                id="acpo_paymentFee"
                class="st_input"
                inputmode="decimal"
                type="number"
                min="0"
                step="0.01"
                placeholder="0.00"
              />
              <span class="st_suffix">%</span>
            </div>
            <div class="st_hint">Example: card processing fee.</div>
          </div>

          <div class="st_field">
            <label class="st_label" for="acpo_shipping">Shipping cost</label>
            <div class="st_inputRow">
              <span class="st_prefix">$</span>
              <input
                id="acpo_shipping"
                class="st_input"
                inputmode="decimal"
                type="number"
                min="0"
                step="0.01"
                placeholder="0.00"
              />
            </div>
          </div>

          <div class="st_divider"></div>

          <div class="st_actions">
            <button class="st_btn" type="button" id="acpo_reset">Reset</button>
            <div class="st_note">Tip: start with a realistic margin (e.g., 10–30%).</div>
          </div>
        </div>

        <!-- RIGHT: Results -->
        <aside class="st_card st_results" aria-label="Results">
          <div class="st_cardHead">
            <h2 class="st_h2">Results</h2>
            <p class="st_muted">Instant output with a clear breakdown.</p>
          </div>

          <div class="st_resultMain">
            <div class="st_resultLabel">Max ad cost per order</div>
            <div class="st_resultValue" id="acpo_maxAds">$0.00</div>

            <div class="st_badgeRow">
              <span class="st_badge" id="acpo_feeBadge">Fees rate: 0.00%</span>
              <span class="st_badge" id="acpo_marginBadge">Target margin: 0.00%</span>
            </div>

            <div class="st_warn" id="acpo_warn" hidden>
              Not possible with these inputs. Either fees + target margin are too high, or fixed costs exceed revenue.
              Try lowering the target margin or reducing costs/fees.
            </div>
          </div>

          <div class="st_pills">
            <div class="st_pill">
              <div class="st_pillKey">Fixed costs (no ads)</div>
              <div class="st_pillVal" id="acpo_fixed">$0.00</div>
              <div class="st_pillSub">COGS + shipping</div>
            </div>

            <div class="st_pill">
              <div class="st_pillKey">Target net profit</div>
              <div class="st_pillVal" id="acpo_targetProfit">$0.00</div>
              <div class="st_pillSub">Price × target margin</div>
            </div>

            <div class="st_pill">
              <div class="st_pillKey">Profit at max ad cost</div>
              <div class="st_pillVal" id="acpo_profitAtMax">$0.00</div>
              <div class="st_pillSub">Should match target profit</div>
            </div>
          </div>
        </aside>
      </div>
    </section>

    <!-- Content (AdSense/SEO) -->
    <section class="container st_content">
      <div class="st_contentInner">
        <h2 class="st_h3">How it works</h2>
        <p class="st_p">
          This calculator estimates the maximum ad spend you can afford per order while still achieving your
          target net margin. It accounts for fixed costs (COGS + shipping) and percent-based fees (platform + payment).
          The remaining amount after those costs is the budget you can allocate to ads.
        </p>

        <h2 class="st_h3">Formula</h2>
        <div class="st_formula">
          <div class="st_formulaLine">
            <span class="st_mono">Fee rate</span> =
            <span class="st_mono">(Platform % + Payment %) / 100</span>
          </div>
          <div class="st_formulaLine">
            <span class="st_mono">Fixed costs (no ads)</span> =
            <span class="st_mono">COGS + Shipping</span>
          </div>
          <div class="st_formulaLine">
            <span class="st_mono">Target profit</span> =
            <span class="st_mono">Price × (Target margin % / 100)</span>
          </div>
          <div class="st_formulaLine">
            <span class="st_mono">Max ad cost</span> =
            <span class="st_mono">Price − Fixed costs − (Fee rate × Price) − Target profit</span>
          </div>
        </div>

        <h2 class="st_h3">Example</h2>
        <p class="st_p">
          If price is $50, target margin is 20%, COGS is $15, shipping is $5, platform fee is 15%, and payment fee is 2.9%:
          fee rate = 17.9%, fixed costs = $20, target profit = $10.
          Max ad cost = 50 − 20 − (0.179×50) − 10 = <strong>$11.05</strong>.
        </p>

        <h2 class="st_h3">FAQ</h2>
        <div class="st_faq">
          <details class="st_faqItem">
            <summary>Does this include taxes?</summary>
            <p>No. Taxes vary by location and business setup, so they’re excluded for simplicity.</p>
          </details>

          <details class="st_faqItem">
            <summary>What does “target net margin” mean?</summary>
            <p>It’s the profit percentage after all costs including fees, shipping, and ads.</p>
          </details>

          <details class="st_faqItem">
            <summary>Why is my max ad cost very low?</summary>
            <p>High fees, high COGS/shipping, or a high target margin will reduce the remaining budget for ads.</p>
          </details>

          <details class="st_faqItem">
            <summary>Can max ad cost be negative?</summary>
            <p>If the math yields a negative number, it means you can’t hit the target margin with these inputs.</p>
          </details>

          <details class="st_faqItem">
            <summary>Is this calculator free?</summary>
            <p>Yes. No login, no account, and no payment required.</p>
          </details>

          <details class="st_faqItem">
            <summary>Which platforms does this work for?</summary>
            <p>Any platform with percent-based fees: Amazon, Shopify, Etsy, Walmart Marketplace, and more.</p>
          </details>
        </div>

        <a class="st_backLink" href="/tools/e-commerce/">← Back to E-commerce Tools</a>
      </div>
    </section>
  </main>

  <script>
    const $ = (id) => document.getElementById(id);

    const el = {
      price: $("acpo_price"),
      targetMargin: $("acpo_targetMargin"),
      cogs: $("acpo_cogs"),
      platform: $("acpo_platformFee"),
      payment: $("acpo_paymentFee"),
      shipping: $("acpo_shipping"),

      outMaxAds: $("acpo_maxAds"),
      outFixed: $("acpo_fixed"),
      outTargetProfit: $("acpo_targetProfit"),
      outProfitAtMax: $("acpo_profitAtMax"),
      feeBadge: $("acpo_feeBadge"),
      marginBadge: $("acpo_marginBadge"),
      warn: $("acpo_warn"),

      reset: $("acpo_reset"),
    };

    const toNum = (v) => {
      const n = Number(v);
      return Number.isFinite(n) ? n : 0;
    };

    const money = (n) =>
      new Intl.NumberFormat("en-US", {
        style: "currency",
        currency: "USD",
        maximumFractionDigits: 2,
      }).format(Number.isFinite(n) ? n : 0);

    const pct = (n) => `${(Number.isFinite(n) ? n : 0).toFixed(2)}%`;

    function calc() {
      const price = Math.max(0, toNum(el.price.value));
      const targetMarginRate = Math.max(0, toNum(el.targetMargin.value)) / 100;

      const cogs = Math.max(0, toNum(el.cogs.value));
      const platformFee = Math.max(0, toNum(el.platform.value)) / 100;
      const paymentFee = Math.max(0, toNum(el.payment.value)) / 100;
      const shipping = Math.max(0, toNum(el.shipping.value));

      const feeRate = Math.max(0, platformFee + paymentFee);
      const fixed = Math.max(0, cogs + shipping);

      const targetProfit = price * targetMarginRate;

      el.feeBadge.textContent = `Fees rate: ${pct(feeRate * 100)}`;
      el.marginBadge.textContent = `Target margin: ${pct(targetMarginRate * 100)}`;

      el.outFixed.textContent = money(fixed);
      el.outTargetProfit.textContent = money(targetProfit);

      // Max ads
      // maxAds = price - fixed - feeRate*price - targetProfit
      const maxAdsRaw = price - fixed - feeRate * price - targetProfit;

      // validity
      const impossible =
        price <= 0 ||
        feeRate >= 1 ||
        targetMarginRate >= 1 ||
        !Number.isFinite(maxAdsRaw) ||
        maxAdsRaw < 0;

      if (impossible) {
        el.warn.hidden = false;
        el.outMaxAds.textContent = money(0);
        el.outProfitAtMax.textContent = money(0);
        return;
      }

      el.warn.hidden = true;

      const maxAds = maxAdsRaw;
      el.outMaxAds.textContent = money(maxAds);

      // profit at max ad cost should equal target profit (by construction)
      const profitAtMax = price - fixed - feeRate * price - maxAds;
      el.outProfitAtMax.textContent = money(profitAtMax);
    }

    ["input", "change"].forEach((evt) => {
      el.price.addEventListener(evt, calc);
      el.targetMargin.addEventListener(evt, calc);
      el.cogs.addEventListener(evt, calc);
      el.platform.addEventListener(evt, calc);
      el.payment.addEventListener(evt, calc);
      el.shipping.addEventListener(evt, calc);
    });

    el.reset.addEventListener("click", () => {
      el.price.value = "";
      el.targetMargin.value = "";
      el.cogs.value = "";
      el.platform.value = "";
      el.payment.value = "";
      el.shipping.value = "";
      calc();
    });

    calc();
  </script>

  <style>
    /* Page shell */
    .st_calcPage { padding: 18px 0 34px; }
    .container { width: 100%; max-width: 1120px; margin: 0 auto; padding: 0 16px; }

    .st_calcHero { padding-top: 8px; padding-bottom: 10px; }
    .st_calcHeroTop { max-width: 820px; }
    .st_kicker {
      display: inline-flex;
      gap: 8px;
      align-items: center;
      font-size: 12px;
      font-weight: 800;
      color: var(--muted, rgba(2,6,23,.65));
      border: 1px solid rgba(2,6,23,.10);
      background: rgba(255,255,255,.7);
      padding: 7px 10px;
      border-radius: 999px;
    }
    .st_h1 {
      margin: 12px 0 8px;
      font-size: clamp(26px, 3vw, 34px);
      line-height: 1.15;
      letter-spacing: -0.03em;
    }
    .st_lead {
      margin: 0;
      font-size: 14px;
      line-height: 1.6;
      color: var(--muted, rgba(2,6,23,.70));
      max-width: 64ch;
    }

    /* Grid */
    .st_calcWrap { margin-top: 14px; }
    .st_calcGrid {
      display: grid;
      grid-template-columns: 1.3fr 1fr;
      gap: 14px;
      align-items: start;
    }
    @media (max-width: 860px) {
      .st_calcGrid { grid-template-columns: 1fr; }
    }

    /* Card */
    .st_card{
      background: #fff;
      border: 1px solid rgba(2,6,23,.10);
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(2,6,23,.06);
      overflow: hidden;
    }
    .st_cardHead{
      padding: 16px 16px 10px;
      border-bottom: 1px solid rgba(2,6,23,.06);
    }
    .st_h2{
      margin: 0;
      font-size: 14px;
      letter-spacing: -0.02em;
    }
    .st_muted{
      margin: 6px 0 0;
      font-size: 12px;
      color: var(--muted, rgba(2,6,23,.65));
      line-height: 1.55;
    }

    /* Inputs */
    .st_inputs { padding-bottom: 14px; }
    .st_field { padding: 12px 16px 0; }
    .st_label{
      display:block;
      font-size: 12px;
      font-weight: 800;
      letter-spacing: -0.01em;
      margin-bottom: 8px;
    }
    .st_inputRow{
      display:flex;
      align-items:center;
      border: 1px solid rgba(2,6,23,.10);
      background: rgba(255,255,255,.9);
      border-radius: 12px;
      overflow: hidden;
    }
    .st_prefix, .st_suffix{
