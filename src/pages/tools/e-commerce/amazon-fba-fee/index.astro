---
// File: src/pages/tools/e-commerce/amazon-fba-fee/index.astro
import BaseLayout from "../../../../components/layout/BaseLayout.astro";

const pageTitle = "Amazon FBA Fee Calculator — Free & Instant | SimpleTools";
const pageDescription =
  "Estimate Amazon referral + FBA fulfillment fees and see net profit and net margin per order. No login. Instant results with clear formulas.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="st_calcPage">
    <section class="st_calcHero container">
      <div class="st_calcHeroTop">
        <div class="st_kicker">Free • No login • Instant</div>
        <h1 class="st_h1">Amazon FBA Fee Calculator</h1>
        <p class="st_lead">
          Estimate Amazon fees (referral + fulfillment) and see your net profit and net margin per order.
          Use presets for referral fee if you’re not sure.
        </p>
      </div>
    </section>

    <!-- Calculator -->
    <section class="container st_calcWrap" aria-label="Amazon FBA fee calculator">
      <div class="st_calcGrid">
        <!-- LEFT: Inputs -->
        <div class="st_card st_inputs">
          <div class="st_cardHead">
            <h2 class="st_h2">Inputs</h2>
            <p class="st_muted">Enter your per-order numbers. Referral fee presets help you start fast.</p>
          </div>

          <div class="st_field">
            <label class="st_label" for="fba_price">Selling price (USD)</label>
            <div class="st_inputRow">
              <span class="st_prefix">$</span>
              <input id="fba_price" class="st_input" inputmode="decimal" type="number" min="0" step="0.01" placeholder="0.00" />
            </div>
          </div>

          <div class="st_field">
            <label class="st_label" for="fba_cogs">Product cost (COGS)</label>
            <div class="st_inputRow">
              <span class="st_prefix">$</span>
              <input id="fba_cogs" class="st_input" inputmode="decimal" type="number" min="0" step="0.01" placeholder="0.00" />
            </div>
          </div>

          <div class="st_field">
            <label class="st_label" for="fba_referral">Referral fee (%)</label>
            <div class="st_inputRow">
              <input id="fba_referral" class="st_input" inputmode="decimal" type="number" min="0" step="0.01" placeholder="0.00" />
              <span class="st_suffix">%</span>
            </div>

            <div class="st_presetRow" aria-label="Referral fee presets">
              <button type="button" class="st_presetBtn" data-ref="8">8%</button>

              <button
                type="button"
                class="st_presetBtn st_presetPrimary"
                data-ref="15"
                aria-label="Recommended referral fee"
              >
                15%
                <span class="st_presetTag">Recommended</span>
              </button>

              <button type="button" class="st_presetBtn" data-ref="20">20%</button>

              <span class="st_presetHint">Most categories fall between 8–15%</span>
            </div>

            <div class="st_hint">Referral fee is a percentage of selling price.</div>
          </div>

          <div class="st_field">
            <label class="st_label" for="fba_fulfill">FBA fulfillment fee (per order)</label>
            <div class="st_inputRow">
              <span class="st_prefix">$</span>
              <input id="fba_fulfill" class="st_input" inputmode="decimal" type="number" min="0" step="0.01" placeholder="0.00" />
            </div>
            <div class="st_hint">Pick from Amazon’s fee table for your size/weight tier.</div>
          </div>

          <div class="st_field">
            <label class="st_label" for="fba_other">Other per-order costs (optional)</label>
            <div class="st_inputRow">
              <span class="st_prefix">$</span>
              <input id="fba_other" class="st_input" inputmode="decimal" type="number" min="0" step="0.01" placeholder="0.00" />
            </div>
            <div class="st_hint">Optional: prep/label, returns allowance, storage allocation, inserts, etc.</div>
          </div>

          <div class="st_divider"></div>

          <div class="st_actions">
            <button class="st_btn" type="button" id="fba_reset">Reset</button>
            <div class="st_note">Tip: If you’re unsure, start with 15% referral + your best fulfillment estimate.</div>
          </div>
        </div>

        <!-- RIGHT: Results -->
        <aside class="st_card st_results" aria-label="Results">
          <div class="st_cardHead">
            <h2 class="st_h2">Results</h2>
            <p class="st_muted">Instant output with a clear breakdown.</p>
          </div>

          <div class="st_resultMain">
            <div class="st_resultLabel">Net profit</div>
            <div class="st_resultValue" id="fba_profit">$0.00</div>

            <div class="st_badgeRow">
              <span class="st_badge" id="fba_marginBadge">Net margin: 0.0%</span>
              <span class="st_badge" id="fba_feeBadge">Total fees: $0.00</span>
            </div>

            <div class="st_warn" id="fba_warn" hidden>
              Selling price is <strong>$0</strong>. Enter a price to calculate referral fee and margin.
            </div>
          </div>

          <div class="st_pills">
            <div class="st_pill">
              <div class="st_pillKey">Referral fee</div>
              <div class="st_pillVal" id="fba_referralAmt">$0.00</div>
              <div class="st_pillSub">Referral % × price</div>
            </div>

            <div class="st_pill">
              <div class="st_pillKey">Fulfillment fee</div>
              <div class="st_pillVal" id="fba_fulfillAmt">$0.00</div>
              <div class="st_pillSub">Per-order FBA fee</div>
            </div>

            <div class="st_pill">
              <div class="st_pillKey">Total cost</div>
              <div class="st_pillVal" id="fba_totalCost">$0.00</div>
              <div class="st_pillSub">COGS + fees + other</div>
            </div>
          </div>
        </aside>
      </div>
    </section>

    <!-- Content (AdSense/SEO) -->
    <section class="container st_content">
      <div class="st_contentInner">
        <h2 class="st_h3">How it works</h2>
        <p class="st_p">
          This calculator estimates Amazon fees in a simple, per-order view. The referral fee is a percentage of your
          selling price. The FBA fulfillment fee is a fixed amount per order based on your product’s size and weight.
          We subtract these fees plus your product cost and any optional costs to estimate net profit and net margin.
        </p>

        <h2 class="st_h3">Formula</h2>
        <div class="st_formula">
          <div class="st_formulaLine">
            <span class="st_mono">Referral fee</span> = <span class="st_mono">Price × (Referral % / 100)</span>
          </div>
          <div class="st_formulaLine">
            <span class="st_mono">Total fees</span> = <span class="st_mono">Referral fee + Fulfillment fee</span>
          </div>
          <div class="st_formulaLine">
            <span class="st_mono">Total cost</span> = <span class="st_mono">COGS + Total fees + Other costs</span>
          </div>
          <div class="st_formulaLine">
            <span class="st_mono">Net profit</span> = <span class="st_mono">Price − Total cost</span>
          </div>
          <div class="st_formulaLine">
            <span class="st_mono">Net margin (%)</span> = <span class="st_mono">(Net profit ÷ Price) × 100</span>
          </div>
        </div>

        <h2 class="st_h3">Example</h2>
        <p class="st_p">
          If price is $40, COGS is $14, referral fee is 15%, fulfillment fee is $5, and other costs are $1:
          referral fee = $6.00, total fees = $11.00, total cost = $26.00, net profit = <strong>$14.00</strong>,
          net margin = <strong>35.0%</strong>.
        </p>

        <h2 class="st_h3">FAQ</h2>
        <div class="st_faq">
          <details class="st_faqItem">
            <summary>What is the referral fee?</summary>
            <p>It’s the percentage Amazon takes from the selling price (varies by category). If unsure, start with 15%.</p>
          </details>

          <details class="st_faqItem">
            <summary>What is the FBA fulfillment fee?</summary>
            <p>A per-order fee based on the product’s size/weight tier. Enter the amount from Amazon’s fee table.</p>
          </details>

          <details class="st_faqItem">
            <summary>Does this include storage fees?</summary>
            <p>Storage is usually monthly. If you want a per-order estimate, put your allocation in “Other costs”.</p>
          </details>

          <details class="st_faqItem">
            <summary>Does this include taxes?</summary>
            <p>No. Taxes vary by state and business setup, so they’re excluded to keep the calculator simple.</p>
          </details>

          <details class="st_faqItem">
            <summary>Is this calculator free?</summary>
            <p>Yes. No login, no account, and no payment required.</p>
          </details>
        </div>

        <a class="st_backLink" href="/tools/e-commerce/">← Back to E-commerce Tools</a>
      </div>
    </section>
  </main>

  <script>
    const $ = (id) => document.getElementById(id);

    const el = {
      price: $("fba_price"),
      cogs: $("fba_cogs"),
      referral: $("fba_referral"),
      fulfill: $("fba_fulfill"),
      other: $("fba_other"),

      outProfit: $("fba_profit"),
      outMarginBadge: $("fba_marginBadge"),
      outFeeBadge: $("fba_feeBadge"),

      outReferralAmt: $("fba_referralAmt"),
      outFulfillAmt: $("fba_fulfillAmt"),
      outTotalCost: $("fba_totalCost"),

      warn: $("fba_warn"),
      reset: $("fba_reset"),
    };

    const toNum = (v) => {
      const n = Number(v);
      return Number.isFinite(n) ? n : 0;
    };

    const money = (n) =>
      new Intl.NumberFormat("en-US", {
        style: "currency",
        currency: "USD",
        maximumFractionDigits: 2,
      }).format(Number.isFinite(n) ? n : 0);

    function calc() {
      const price = toNum(el.price.value);
      const cogs = toNum(el.cogs.value);
      const referralRate = Math.max(0, toNum(el.referral.value) / 100);
      const fulfill = Math.max(0, toNum(el.fulfill.value));
      const other = Math.max(0, toNum(el.other.value));

      if (price <= 0) el.warn.hidden = false;
      else el.warn.hidden = true;

      const referralAmt = price * referralRate;
      const totalFees = referralAmt + fulfill;
      const totalCost = cogs + totalFees + other;

      const profit = price - totalCost;
      const margin = price > 0 ? (profit / price) * 100 : 0;

      el.outReferralAmt.textContent = money(referralAmt);
      el.outFulfillAmt.textContent = money(fulfill);
      el.outTotalCost.textContent = money(totalCost);

      el.outProfit.textContent = money(profit);
      el.outMarginBadge.textContent = `Net margin: ${(Number.isFinite(margin) ? margin : 0).toFixed(1)}%`;
      el.outFeeBadge.textContent = `Total fees: ${money(totalFees)}`;
    }

    // Referral preset buttons
    document.querySelectorAll("[data-ref]").forEach((btn) => {
      btn.addEventListener("click", () => {
        el.referral.value = btn.getAttribute("data-ref");
        calc();
      });
    });

    ["input", "change"].forEach((evt) => {
      el.price.addEventListener(evt, calc);
      el.cogs.addEventListener(evt, calc);
      el.referral.addEventListener(evt, calc);
      el.fulfill.addEventListener(evt, calc);
      el.other.addEventListener(evt, calc);
    });

    el.reset.addEventListener("click", () => {
      el.price.value = "";
      el.cogs.value = "";
      el.referral.value = "";
      el.fulfill.value = "";
      el.other.value = "";
      calc();
    });

    calc();
  </script>

