---
// File: src/pages/index.astro
import BaseLayout from "../components/layout/BaseLayout.astro";
import { site } from "../config/site";

const pageTitle = "Free simple calculators — instant results | SimpleTools";
const pageDescription =
  "Fast, clear, and reliable calculators for everyday decisions—pricing, fees, budgets, and more. No login. Instant results with transparent formulas.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="st_home">
    <!-- Hero -->
    <section class="container st_homeHero">
      <div class="st_homeHeroGrid">
        <div class="st_homeHeroLeft">
          <div class="st_kicker">Free • No login • Instant results</div>
          <h1 class="st_h1">Simple calculators for quick decisions.</h1>
          <p class="st_lead">
            Fast, clear, and reliable tools for everyday calculations—pricing, fees, budgets, and more.
            See results instantly with transparent formulas.
          </p>

          <div class="st_homeCtas">
            <a class="st_btnPrimary" href="/tools/e-commerce/">Open calculators</a>
            <a class="st_btnGhost" href="/tools/e-commerce/#calculators">Most used tools</a>
          </div>

          <div class="st_homeBadges" aria-label="Key benefits">
            <span class="st_badge">Simple inputs</span>
            <span class="st_badge">Clear breakdown</span>
            <span class="st_badge">Formula + FAQ on every tool</span>
          </div>
        </div>

        <!-- Right: Minimal “preview” card -->
        <div class="st_homeHeroRight" aria-label="Preview">
          <div class="st_card st_previewCard">
            <div class="st_previewHead">
              <div class="st_previewTitle">Instant output</div>
              <div class="st_previewSub">Example result</div>
            </div>

            <div class="st_previewMain">
              <div class="st_previewLabel">Result</div>
              <div class="st_previewValue">$1,248.40</div>
            </div>

            <div class="st_previewGrid">
              <div class="st_pill">
                <div class="st_pillKey">Fees</div>
                <div class="st_pillVal">− 12.4%</div>
                <div class="st_pillSub">Percent-based</div>
              </div>
              <div class="st_pill">
                <div class="st_pillKey">Budget</div>
                <div class="st_pillVal">$38.20</div>
                <div class="st_pillSub">Per order</div>
              </div>
            </div>

            <div class="st_previewNote">
              Every calculator includes how it works, the formula, an example, and FAQs.
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- What you can calculate (content-rich hub) -->
    <section class="container st_section" aria-label="What you can calculate">
      <div class="st_sectionHead">
        <h2 class="st_h2">What you can calculate</h2>
        <p class="st_muted">Start with the most-used calculators. More categories will be added over time.</p>
      </div>

      <div class="st_toolGrid" id="calculators">
        <a class="st_toolCard" href="/tools/e-commerce/profit-margin/">
          <div class="st_toolTitle">Profit Margin</div>
          <div class="st_toolDesc">Net profit & net margin after costs and fees.</div>
        </a>

        <a class="st_toolCard" href="/tools/e-commerce/break-even-price/">
          <div class="st_toolTitle">Break-even Price</div>
          <div class="st_toolDesc">Minimum selling price to avoid losses.</div>
        </a>

        <a class="st_toolCard" href="/tools/e-commerce/product-pricing/">
          <div class="st_toolTitle">Product Pricing</div>
          <div class="st_toolDesc">Reverse-calc a recommended selling price.</div>
        </a>

        <a class="st_toolCard" href="/tools/e-commerce/ad-cost-per-order/">
          <div class="st_toolTitle">Ad Cost / Order</div>
          <div class="st_toolDesc">Max ad spend per order while keeping margin.</div>
        </a>

        <a class="st_toolCard" href="/tools/e-commerce/amazon-fba-fee/">
          <div class="st_toolTitle">Amazon FBA Fee</div>
          <div class="st_toolDesc">Simple fee estimate + quick profit check.</div>
        </a>
      </div>

      <div class="st_sectionFoot">
        <a class="st_btnGhost" href="/tools/e-commerce/">Browse all calculators →</a>
      </div>
    </section>

    <!-- How it works -->
    <section class="container st_section" aria-label="How it works">
      <div class="st_sectionHead">
        <h2 class="st_h2">How SimpleTools works</h2>
        <p class="st_muted">A consistent, verifiable structure on every tool page.</p>
      </div>

      <div class="st_steps">
        <div class="st_step">
          <div class="st_stepNum">1</div>
          <div class="st_stepBody">
            <div class="st_stepTitle">Enter your numbers</div>
            <div class="st_stepDesc">Use simple inputs—USD, percentages, and per-order costs.</div>
          </div>
        </div>
        <div class="st_step">
          <div class="st_stepNum">2</div>
          <div class="st_stepBody">
            <div class="st_stepTitle">We apply transparent formulas</div>
            <div class="st_stepDesc">No black box: formulas and assumptions are shown.</div>
          </div>
        </div>
        <div class="st_step">
          <div class="st_stepNum">3</div>
          <div class="st_stepBody">
            <div class="st_stepTitle">Get instant results + breakdown</div>
            <div class="st_stepDesc">See the final number and what’s driving it.</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Who it's for -->
    <section class="container st_section" aria-label="Who it is for">
      <div class="st_sectionHead">
        <h2 class="st_h2">Who this is for</h2>
        <p class="st_muted">Built for anyone who needs quick, reliable calculations without logging in.</p>
      </div>

      <div class="st_audience">
        <div class="st_audienceItem">E-commerce sellers and operators</div>
        <div class="st_audienceItem">Amazon, Shopify, Etsy, and marketplace users</div>
        <div class="st_audienceItem">Creators and small businesses planning pricing & budgets</div>
        <div class="st_audienceItem">Anyone who wants instant results with clear formulas</div>
      </div>
    </section>

    <!-- Built to scale -->
    <section class="container st_section" aria-label="Built to scale">
      <div class="st_scaleCard">
        <div>
          <div class="st_scaleTitle">Built to scale</div>
          <div class="st_scaleDesc">
            E-commerce tools are available now. More categories—tax, wedding, and daily calculators—will be added over time.
          </div>
        </div>
        <a class="st_btnPrimary" href="/tools/e-commerce/">Start with E-commerce</a>
      </div>
    </section>
  </main>

  <style>
    /* Shell */
    .st_home { padding: 18px 0 34px; }
    .container { width: 100%; max-width: 1120px; margin: 0 auto; padding: 0 16px; }

    /* Reuse calc style tokens */
    .st_kicker{
      display: inline-flex;
      gap: 8px;
      align-items: center;
      font-size: 12px;
      font-weight: 800;
      color: var(--muted, rgba(2,6,23,.65));
      border: 1px solid rgba(2,6,23,.10);
      background: rgba(255,255,255,.7);
      padding: 7px 10px;
      border-radius: 999px;
    }
    .st_h1{
      margin: 12px 0 8px;
      font-size: clamp(28px, 3.2vw, 38px);
      line-height: 1.12;
      letter-spacing: -0.035em;
    }
    .st_lead{
      margin: 0;
      font-size: 14px;
      line-height: 1.65;
      color: var(--muted, rgba(2,6,23,.70));
      max-width: 66ch;
    }
    .st_h2{
      margin: 0;
      font-size: 14px;
      font-weight: 950;
      letter-spacing: -0.02em;
    }
    .st_muted{
      margin: 6px 0 0;
      font-size: 12px;
      color: var(--muted, rgba(2,6,23,.65));
      line-height: 1.55;
    }

    /* Buttons */
    .st_homeCtas{ margin-top: 14px; display:flex; gap:10px; flex-wrap:wrap; }
    .st_btnPrimary, .st_btnGhost{
      display:inline-flex; align-items:center; justify-content:center;
      text-decoration:none;
      border-radius: 12px;
      padding: 10px 12px;
      font-size: 13px;
      font-weight: 950;
      letter-spacing: -0.01em;
      border: 1px solid rgba(2,6,23,.10);
    }
    .st_btnPrimary{
      background: rgba(2,6,23,.92);
      color: #fff;
      border-color: rgba(2,6,23,.92);
    }
    .st_btnGhost{
      background: rgba(255,255,255,.92);
      color: rgba(2,6,23,.92);
    }
    .st_btnPrimary:hover, .st_btnGhost:hover{ transform: translateY(-1px); }

    /* Badges */
    .st_homeBadges{ margin-top: 12px; display:flex; gap:8px; flex-wrap:wrap; }
    .st_badge{
      font-size: 12px;
      font-weight: 900;
      padding: 7px 10px;
      border-radius: 999px;
      border: 1px solid rgba(2,6,23,.10);
      background: rgba(2,6,23,.03);
      color: rgba(2,6,23,.75);
      white-space: nowrap;
    }

    /* Hero layout */
    .st_homeHero{ padding-top: 8px; padding-bottom: 10px; }
    .st_homeHeroGrid{
      display:grid;
      grid-template-columns: 1.25fr 0.9fr;
      gap: 14px;
      align-items: start;
    }
    @media (max-width: 920px){
      .st_homeHeroGrid{ grid-template-columns: 1fr; }
    }
    .st_homeHeroRight{ display:block; }

    /* Card */
    .st_card{
      background: #fff;
      border: 1px solid rgba(2,6,23,.10);
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(2,6,23,.06);
      overflow: hidden;
    }

    /* Preview */
    .st_previewCard{ padding: 16px; }
    .st_previewHead{ display:flex; justify-content:space-between; align-items:baseline; gap: 10px; }
    .st_previewTitle{ font-size: 12px; font-weight: 950; color: rgba(2,6,23,.80); }
    .st_previewSub{ font-size: 12px; font-weight: 800; color: var(--muted, rgba(2,6,23,.60)); }
    .st_previewMain{ margin-top: 14px; padding: 12px; border-radius: 14px; border: 1px solid rgba(2,6,23,.08); background: rgba(2,6,23,.02); }
    .st_previewLabel{ font-size: 12px; font-weight: 900; color: rgba(2,6,23,.65); }
    .st_previewValue{ margin-top: 6px; font-size: 34px; font-weight: 950; letter-spacing: -0.04em; line-height: 1.05; }
    .st_previewGrid{ margin-top: 10px; display:grid; grid-template-columns: 1fr 1fr; gap: 10px; }
    @media (max-width: 920px){ .st_previewGrid{ grid-template-columns: 1fr; } }
    .st_pill{
      border-radius: 14px;
      border: 1px solid rgba(2,6,23,.08);
      background: rgba(2,6,23,.02);
      padding: 12px 12px;
    }
    .st_pillKey{ font-size: 12px; font-weight: 900; color: rgba(2,6,23,.65); }
    .st_pillVal{ margin-top: 6px; font-size: 20px; font-weight: 950; letter-spacing: -0.03em; }
    .st_pillSub{ margin-top: 6px; font-size: 12px; color: var(--muted, rgba(2,6,23,.60)); }
    .st_previewNote{ margin-top: 12px; font-size: 12px; line-height: 1.6; color: var(--muted, rgba(2,6,23,.62)); }

    /* Sections */
    .st_section{ margin-top: 18px; }
    .st_sectionHead{ max-width: 820px; }

    /* Tool grid */
    .st_toolGrid{
      margin-top: 12px;
      display:grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 12px;
    }
    @media (max-width: 980px){ .st_toolGrid{ grid-template-columns: repeat(2, 1fr); } }
    @media (max-width: 640px){ .st_toolGrid{ grid-template-columns: 1fr; } }

    .st_toolCard{
      display:block;
      text-decoration:none;
      background:#fff;
      border:1px solid rgba(2,6,23,.10);
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(2,6,23,.06);
      padding: 14px 14px;
      color: rgba(2,6,23,.92);
    }
    .st_toolCard:hover{ transform: translateY(-1px); }
    .st_toolTitle{ font-size: 13px; font-weight: 950; letter-spacing: -0.02em; }
    .st_toolDesc{ margin-top: 6px; font-size: 12px; line-height: 1.6; color: var(--muted, rgba(2,6,23,.65)); }

    .st_sectionFoot{ margin-top: 12px; }

    /* Steps */
    .st_steps{
      margin-top: 12px;
      display:grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 12px;
    }
    @media (max-width: 980px){ .st_steps{ grid-template-columns: 1fr; } }
    .st_step{
      background:#fff;
      border:1px solid rgba(2,6,23,.10);
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(2,6,23,.06);
      padding: 14px 14px;
      display:flex;
      gap: 10px;
      align-items:flex-start;
    }
    .st_stepNum{
      width: 28px; height: 28px;
      border-radius: 999px;
      border: 1px solid rgba(2,6,23,.10);
      background: rgba(2,6,23,.03);
      display:flex; align-items:center; justify-content:center;
      font-size: 12px; font-weight: 950;
      color: rgba(2,6,23,.80);
      flex: 0 0 auto;
    }
    .st_stepTitle{ font-size: 13px; font-weight: 950; letter-spacing: -0.02em; }
    .st_stepDesc{ margin-top: 6px; font-size: 12px; line-height: 1.6; color: var(--muted, rgba(2,6,23,.65)); }

    /* Audience */
    .st_audience{
      margin-top: 12px;
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }
    @media (max-width: 720px){ .st_audience{ grid-template-columns: 1fr; } }
    .st_audienceItem{
      border: 1px solid rgba(2,6,23,.08);
      background: rgba(255,255,255,.9);
      border-radius: 14px;
      padding: 12px 12px;
      font-size: 12.5px;
      font-weight: 850;
      color: rgba(2,6,23,.78);
    }

    /* Scale card */
    .st_scaleCard{
      margin-top: 6px;
      background:#fff;
      border:1px solid rgba(2,6,23,.10);
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(2,6,23,.06);
      padding: 14px 14px;
      display:flex;
      justify-content:space-between;
      align-items:center;
      gap: 12px;
      flex-wrap: wrap;
    }
    .st_scaleTitle{ font-size: 13px; font-weight: 950; letter-spacing: -0.02em; }
    .st_scaleDesc{ margin-top: 6px; font-size: 12px; line-height: 1.6; color: var(--muted, rgba(2,6,23,.65)); max-width: 72ch; }
  </style>
</BaseLayout>
