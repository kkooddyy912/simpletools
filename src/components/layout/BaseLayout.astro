---
import "../../styles/global.css";
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import { site } from "../../config/site";

const { title, description, canonical } = Astro.props;
const pageTitle = title ? `${title} | ${site.name}` : site.name;
const pageDesc = description ?? site.description;
const pageCanonical = canonical ?? site.url;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDesc} />
    <link rel="canonical" href={pageCanonical} />

    <!-- Gg_Ad -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6255293185132957"
     crossorigin="anonymous"></script>

    <!-- Inter (Google Fonts) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <Header />
    <main class="container" style="padding: 26px 0 44px;">
      <slot />
    </main>
    <Footer />
  </body>
</html>
