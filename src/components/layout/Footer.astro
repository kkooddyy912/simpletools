---
import { site } from "../../config/site";
const year = new Date().getFullYear();
---

<footer class="st_footer">
  <div class="container st_footerInner">
    <div class="st_footerTop">
      <div>
        <div class="st_footerBrand">{site.name}</div>
        <div class="st_footerDesc">{site.description}</div>
      </div>

      <div class="st_footerLinks" aria-label="Footer links">
        {site.footer.map((item) => (
          <a class="st_footerLink" href={item.href}>{item.label}</a>
        ))}
      </div>
    </div>

    <div class="st_footerBottom">
      <span>Â© {year} {site.name}. All rights reserved.</span>
      <span class="st_footerEmail">{site.contactEmail}</span>
    </div>
  </div>
</footer>

<style>
  .st_footer{
    margin-top: 30px;
    border-top: 1px solid rgba(2,6,23,.10);
    background: rgba(255,255,255,.55);
  }
  .st_footerInner{ padding: 22px 0; }
  .st_footerTop{
    display:flex; justify-content:space-between; gap:18px; flex-wrap:wrap;
  }
  .st_footerBrand{ font-weight:900; letter-spacing:-0.02em; }
  .st_footerDesc{ font-size:12px; color: var(--muted); margin-top:6px; max-width:520px; }
  .st_footerLinks{ display:flex; gap:10px; flex-wrap:wrap; }
  .st_footerLink{
    font-size:12px; font-weight:800;
    padding:8px 10px; border-radius:12px;
    border: 1px solid rgba(2,6,23,.10);
    background: rgba(255,255,255,.8);
  }
  .st_footerBottom{
    margin-top: 14px;
    display:flex; justify-content:space-between; gap:12px; flex-wrap:wrap;
    font-size:12px; color: var(--muted);
  }
  .st_footerEmail{ font-weight:700; }
</style>
