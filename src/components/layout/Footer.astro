---
// File: src/components/layout/Footer.astro
import { site } from "../../config/site";
const year = new Date().getFullYear();
---

<footer class="st_footer" role="contentinfo">
  <div class="container st_footerInner">
    <div class="st_footerTop">
      <div class="st_footerInfo">
        <div class="st_footerBrand">{site.name}</div>
        <p class="st_footerDesc">{site.description}</p>
      </div>

      <nav class="st_footerLinks" aria-label="Footer">
        {site.footer?.map((item) => (
          <a class="st_footerLink" href={item.href}>{item.label}</a>
        ))}
      </nav>
    </div>

    <div class="st_footerBottom">
      <span>Â© {year} {site.name}. All rights reserved.</span>
      <a class="st_footerEmail" href={`mailto:${site.contactEmail}`}>{site.contactEmail}</a>
    </div>
  </div>
</footer>

<style>
  /* ===== Footer Base ===== */
  .st_footer{
    margin-top:40px;
    border-top:1px solid rgba(2,6,23,.08);
    background:rgba(255,255,255,.6);
  }
  .st_footerInner{ padding:24px 0; }

  /* ===== Top ===== */
  .st_footerTop{
    display:flex;
    justify-content:space-between;
    align-items:flex-start;
    gap:24px;
    flex-wrap:wrap;
  }
  .st_footerInfo{ max-width:560px; }

  .st_footerBrand{
    font-weight:900;
    letter-spacing:-0.02em;
  }

  .st_footerDesc{
    margin:6px 0 0;
    font-size:12px;
    line-height:1.55;
    color: var(--muted, rgba(2,6,23,.65));
  }

  /* ===== Links ===== */
  .st_footerLinks{
    display:flex;
    align-items:center;
    gap:18px;
    flex-wrap:wrap;
  }

  .st_footerLink{
    font-size:12px;
    font-weight:700;
    color: rgba(2,6,23,.62);
    text-decoration:none;
    padding:0;
    border:none;
    background:none;
  }

  .st_footerLink:hover{
    color: rgba(2,6,23,.92);
    text-decoration: underline;
    text-underline-offset:3px;
  }

  .st_footerLink:focus-visible{
    outline:2px solid rgba(2,6,23,.22);
    outline-offset:4px;
    border-radius:6px;
  }

  /* ===== Bottom ===== */
  .st_footerBottom{
    margin-top:18px;
    display:flex;
    justify-content:space-between;
    gap:12px;
    flex-wrap:wrap;
    font-size:12px;
    color: var(--muted, rgba(2,6,23,.65));
  }

  .st_footerEmail{
    font-weight:700;
    color: inherit;
    text-decoration:none;
  }
  .st_footerEmail:hover{
    color: rgba(2,6,23,.92);
    text-decoration: underline;
    text-underline-offset:3px;
  }

  /* ===== Mobile ===== */
  @media (max-width:640px){
    .st_footerLinks{ gap:14px; }
  }
</style>
