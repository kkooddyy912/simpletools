---
import { site } from "../../config/site";
---

<header class="st_header">
  <div class="container st_headerInner">
    <a class="st_brand" href="/">
      <span class="st_logo">ST</span>
      <span class="st_name">{site.name}</span>
    </a>

    <nav class="st_nav" aria-label="Primary navigation">
      {site.nav.map((item) => (
        <a class="st_navLink" href={item.href}>{item.label}</a>
      ))}
    </nav>
  </div>
</header>

<style>
  .st_header{
    position: sticky; top:0; z-index:50;
    backdrop-filter: blur(10px);
    background: rgba(245,247,251,.75);
    border-bottom: 1px solid rgba(2,6,23,.08);
  }
  .st_headerInner{
    display:flex; align-items:center; justify-content:space-between;
    padding: 14px 0;
  }
  .st_brand{ display:flex; align-items:center; gap:10px; font-weight:800; }
  .st_logo{
    width:34px; height:34px; border-radius:10px;
    display:inline-flex; align-items:center; justify-content:center;
    background:#0f172a; color:#fff; font-size:12px;
  }
  .st_name{ letter-spacing:-0.02em; }

  .st_nav{ display:flex; gap:14px; flex-wrap:wrap; }
  .st_navLink{
    font-size:13px; font-weight:700;
    padding:8px 10px; border-radius:12px;
    border: 1px solid rgba(2,6,23,.10);
    background: rgba(255,255,255,.7);
  }
  .st_navLink:hover{ opacity:.9; }

  @media (max-width: 720px){
    .st_headerInner{ gap:12px; align-items:flex-start; flex-direction:column; }
    .st_nav{ width:100%; }
  }
</style>
