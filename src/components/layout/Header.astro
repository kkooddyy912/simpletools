0---
import { site } from "../../config/site";

const toolLinks = (site as any).headerTools ?? [];
const navLinks = (site as any).nav ?? [];
---

<header class="st_header">
  <div class="container st_top">
    <a class="st_brand" href="/">
      <!-- LOGO IMAGE -->
      <img
        src="/logo.png"
        alt={`${site.name} logo`}
        class="st_logoImg"
        loading="eager"
        decoding="async"
      />
      <span class="st_name">{site.name}</span>
    </a>
  </div>

  <!-- 2행: 툴 네비게이션 -->
  <div class="st_bottom">
    <div class="container st_menu">
      {(toolLinks.length ? toolLinks : navLinks).map((item) => (
        <a class="st_toolLink" href={item.href}>{item.label}</a>
      ))}
    </div>
  </div>
</header>

<style>
  /* ===== Header Base ===== */
  .st_header{
    position: sticky;
    top: 0;
    z-index: 50;
    background: rgba(245,247,251,.92);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(2,6,23,.08);
  }

  /* ===== Top ===== */
  .st_top{
    display:flex;
    align-items:center;
    padding: 14px 0 10px;
  }

  .st_brand{
    display:flex;
    align-items:center;
    gap:10px;
    font-weight:900;
    letter-spacing:-0.02em;
    text-decoration:none;
    color:inherit;
  }

  /* ===== Logo Image (ST → logo.png) ===== */
  .st_logoImg{
    width:32px;
    height:32px;
    object-fit:contain;
    border-radius:10px;
    background: none; /* 투명 PNG 대비용 */
    padding:0px;       /* 기존 ST 박스 감성 유지 */
  }

  .st_name{
    font-size:17px;
    font-weight:900;
    letter-spacing:-0.02em;
  }

  /* ===== Bottom Nav ===== */
  .st_bottom{
    border-top: 1px solid rgba(2,6,23,.06);
  }

  .st_menu{
    display:flex;
    gap:10px;
    flex-wrap:wrap;
    padding: 10px 0 12px;
  }

  .st_toolLink{
    font-size:12px;
    font-weight:800;
    padding:8px 12px;
    border-radius:999px;
    border:1px solid rgba(2,6,23,.10);
    background: rgba(255,255,255,.75);
    white-space:nowrap;
    text-decoration:none;
    color:inherit;
  }

  .st_toolLink:hover{
    background:#0f172a;
    color:#fff;
  }

  /* ===== Mobile ===== */
  @media (max-width: 720px){
    .st_menu{
      overflow-x:auto;
      -webkit-overflow-scrolling: touch;
    }
  }
</style>
